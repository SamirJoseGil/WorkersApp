<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkersApp.MainPage"
             BackgroundColor="#FFEFD5">

    <StackLayout Padding="10" VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
        <Entry x:Name="CompanyNumberEntry" Placeholder="Enter company number" MaxLength="6" />
        <Button Text="Select File" Clicked="OnSelectFileButtonClicked" BackgroundColor="#FFA500" TextColor="White" WidthRequest="200" Margin="0,10,0,0" />
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
            <Label x:Name="SelectedFilePathLabel" Text="No file selected" VerticalOptions="Center" />
            <Button Text="Upload File" Clicked="OnUploadButtonClicked" BackgroundColor="#FFA500" TextColor="White" WidthRequest="200" />
        </StackLayout>
        <Button Text="Delete File" Clicked="OnDeleteFileButtonClicked" BackgroundColor="#FFA500" TextColor="White" WidthRequest="200" Margin="0,10,0,0" />
        <ProgressBar x:Name="UploadProgressBar" WidthRequest="300" HeightRequest="20" IsVisible="False" Margin="0,10,0,0" />
    </StackLayout>
</ContentPage>
